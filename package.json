    "vue": "^3.5.17",
    "vue-echarts": "^8.0.1",
    "vue-i18n": "11",
    "vue-router": "4",
    "vue-toastification": "^2.0.0-rc.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/config-conventional": "^19.8.1",
    "@iconify-json/tabler": "^1.2.23",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.0.13",
    "@vitejs/plugin-vue": "^6.0.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
