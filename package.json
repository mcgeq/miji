    "@tauri-apps/plugin-notification": "~2.3.0",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "@tauri-apps/plugin-os": "~2.3.0",
    "@tauri-apps/plugin-sql": "~2.3.0",
    "@tauri-store/pinia": "^4.1.0",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.9.0",
    "date-fns": "^4.1.0",
    "echarts": "^6.0.0",
    "es-toolkit": "^1.39.10",
    "lru-cache": "^11.1.0",
    "lucide-vue-next": "^0.525.0",
    "pinia": "^3.0.3",
