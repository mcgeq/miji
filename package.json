    "npm-check-updates": "^18.0.1",
    "svelte": "^5.37.3",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-router": "^0.14.0",
    "vite": "^7.0.4",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
