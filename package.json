  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:win": "powershell -ExecutionPolicy Bypass -File ./build.ps1 -Target windows",
    "build:android": "powershell -ExecutionPolicy Bypass -File ./build.ps1 -Target android",
    "build:ios": "powershell -ExecutionPolicy Bypass -File ./build.ps1 -Target ios",
    "build:all": "powershell -ExecutionPolicy Bypass -File ./build.ps1 -Target all",
    "build:clean": "powershell -ExecutionPolicy Bypass -File ./build.ps1 -Clean",
    "build:win:bat": "build.bat -t windows",
    "build:android:bat": "build.bat -t android",
    "build:all:bat": "build.bat -t all",
    "build:clean:bat": "build.bat -c",
    "test": "vitest",
    "commit": "git add . && cz",
    "format": "biome format --write src",
    "lint": "biome check src",
    "lint:fix": "biome check --write --unsafe",
    "fmt:rust": "cd src-tauri && cargo fmt",
    "fmt:all": "biome check --write --unsafe --files-ignore-unknown=true --no-errors-on-unmatched . && cd src-tauri && cargo fmt",
    "jj:c": "powershell -ExecutionPolicy Bypass -File ./jj-fmt.ps1",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
