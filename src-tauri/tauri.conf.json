{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "miji",
  "version": "0.1.0",
  "identifier": "com.mcgeq",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:9428",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MiJi",
        "width": 1024,
        "height": 600,
        "center": true,
        "fullscreen": false,
        "maximizable": false,
        "resizable": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      },
      "capabilities": ["default", "pinia"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [".env"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
 }
